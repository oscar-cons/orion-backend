{
  "name": "Orion Backend",
  "description": "FastAPI-based backend application for ransomware intelligence and analysis",
  "repository": "https://github.com/oscar-cons/orion-backend",
  "logo": "https://raw.githubusercontent.com/oscar-cons/orion-backend/main/docs/logo.png",
  "keywords": ["fastapi", "python", "postgresql", "docker", "api"],
  "env": {
    "DB_USER": {
      "description": "Database username",
      "value": "orion_user",
      "required": false
    },
    "DB_PASSWORD": {
      "description": "Database password (REQUIRED - Change this!)",
      "value": "change_this_password",
      "required": true
    },
    "DB_NAME": {
      "description": "Database name",
      "value": "orion",
      "required": false
    },
    "GOOGLE_API_KEY": {
      "description": "Google AI API Key (Optional - for AI features)",
      "value": "",
      "required": false
    },
    "ENVIRONMENT": {
      "description": "Environment (development/production)",
      "value": "development",
      "required": false
    },
    "DEBUG": {
      "description": "Debug mode",
      "value": "true",
      "required": false
    }
  },
  "addons": [
    {
      "plan": "postgresql"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "scripts": {
    "postdeploy": "cd backend-fastapi && alembic upgrade head"
  },
  "stack": "container",
  "website": "https://github.com/oscar-cons/orion-backend"
} 